{
    "name": "ferror/SymfonyBundle",
    "license": "MIT",
    "description": "",
    "type": "symfony-bundle",
    "autoload" : {
        "psr-4" : {
            "Ferror\\Bundle\\SymfonyBundle\\" : "src/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Ferror\\Bundle\\SymfonyBundle\\" : "tests/"
        }
    },
    "require": {
        "php": "^7.1.2"
